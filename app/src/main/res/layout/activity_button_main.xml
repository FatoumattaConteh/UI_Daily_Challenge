<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buttons.ButtonMainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:onClick="openbasic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic Button"
            />

        <Button
            android:onClick="openutility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button Utility "
            />
        <Button
            android:onClick="opentoggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buttons Toggle "
            />

        <Button
            android:onClick="openfabButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= " Fab buttons and MoreButtons "
            />





    </LinearLayout>

</androidx.core.widget.NestedScrollView>