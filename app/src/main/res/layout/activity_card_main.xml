<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cards.CardMainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:onClick="openCardBasics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "Basic Cards "
            />


        <Button
            android:onClick="openClickableCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "Clickable Cards "
            />
        <Button
            android:onClick="openCArdOverlap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "Card Overlap"
            />
        <Button
            android:onClick="openCardSplahScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "Card Splash Screen Scroll"
            />



    </LinearLayout>

</androidx.core.widget.NestedScrollView>